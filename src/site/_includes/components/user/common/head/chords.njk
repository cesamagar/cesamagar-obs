<script src="https://cdn.jsdelivr.net/npm/chordsheetjs@8.5.1/dist/chordsheetjs.umd.js" 
        crossorigin="anonymous" 
        onload="window.chordLibraryLoaded = true;"></script>

<script>
(function() {
    function ejecutarTransformacion() {
        if (!window.ChordSheetJS) {
            console.log("Esperando a ChordSheetJS...");
            return;
        }

        const bloques = document.querySelectorAll('pre');
        
        bloques.forEach((bloque, i) => {
            if (bloque.dataset.musicDone === "true") return;

            const contenido = bloque.innerText.trim();
            // Detectamos si es formato ChordPro (tu formato con [])
            if (contenido.includes('[') && contenido.includes(']')) {
                try {
                    const parser = new ChordSheetJS.ChordProParser();
                    let cancion = parser.parse(contenido);
                    const formateador = new ChordSheetJS.HtmlTableFormatter();
                    
                    bloque.dataset.musicDone = "true";
                    const container = document.createElement('div');
                    container.className = 'chord-sheet-container';
                    
                    const renderizar = (s) => formateador.format(s);

                    container.innerHTML = `
                        <div class="chord-header">
                            <button id="up-${i}" class="chord-btn">Tono +1</button>
                            <button id="down-${i}" class="chord-btn">Tono -1</button>
                            <span class="chord-badge">MODO INTERACTIVO</span>
                        </div>
                        <div id="visor-${i}" class="chord-body">${renderizar(cancion)}</div>
                    `;

                    bloque.replaceWith(container);

                    container.querySelector(`#up-${i}`).onclick = (e) => {
                        e.preventDefault();
                        cancion = cancion.transpose(1);
                        container.querySelector(`#visor-${i}`).innerHTML = renderizar(cancion);
                    };
                    container.querySelector(`#down-${i}`).onclick = (e) => {
                        e.preventDefault();
                        cancion = cancion.transpose(-1);
                        container.querySelector(`#visor-${i}`).innerHTML = renderizar(cancion);
                    };
                } catch (err) {
                    console.error("Error en bloque " + i, err);
                }
            }
        });
    }

    // Intentar ejecutar cada segundo
    setInterval(ejecutarTransformacion, 1000);
})();
</script>

