<script src="https://unpkg.com/chordsheetjs@13.0.1/lib/bundle.js"></script>

<script>
(function() {
    function inicializarInteractivo() {
        // Verificamos si la librería cargó (en v13 se accede vía window.ChordSheetJS)
        if (typeof ChordSheetJS === 'undefined') {
            console.log("Esperando a que ChordSheetJS cargue desde la red...");
            return;
        }

        // Buscamos los bloques de código que Obsidian llama "chords"
        const bloques = document.querySelectorAll('pre');

        bloques.forEach((bloque, i) => {
            if (bloque.dataset.renderizado === "true") return;

            const texto = bloque.innerText.trim();
            // Detectamos si es tu formato ChordPro o tiene la clase chords
            const esMusica = texto.includes('[') && texto.includes(']') || bloque.classList.contains('language-chords');

            if (esMusica) {
                console.log("¡Canción detectada! Transformando...");
                try {
                    // En v13, los parsers están dentro del objeto ChordSheetJS
                    const parser = new ChordSheetJS.ChordProParser();
                    let cancion = parser.parse(texto);
                    const formateador = new ChordSheetJS.HtmlTableFormatter();
                    
                    bloque.dataset.renderizado = "true";
                    const contenedor = document.createElement('div');
                    contenedor.className = 'chord-sheet-container';
                    
                    const dibujar = (s) => formateador.format(s);

                    contenedor.innerHTML = `
                        <div class="chord-controls" style="margin-bottom:15px; display:flex; gap:10px; align-items:center;">
                            <button class="c-btn" id="up-${i}">+1 Tono</button>
                            <button class="c-btn" id="down-${i}">-1 Tono</button>
                            <span style="font-size:10px; color:#666; font-weight:bold;">MODO INTERACTIVO</span>
                        </div>
                        <div id="visor-${i}" class="chord-render-area">${dibujar(cancion)}</div>
                    `;

                    bloque.replaceWith(contenedor);

                    contenedor.querySelector(`#up-${i}`).onclick = (e) => {
                        e.preventDefault();
                        cancion = cancion.transpose(1);
                        contenedor.querySelector(`#visor-${i}`).innerHTML = dibujar(cancion);
                    };
                    contenedor.querySelector(`#down-${i}`).onclick = (e) => {
                        e.preventDefault();
                        cancion = cancion.transpose(-1);
                        contenedor.querySelector(`#visor-${i}`).innerHTML = dibujar(cancion);
                    };
                } catch (err) {
                    console.error("Error al procesar canción:", err);
                }
            }
        });
    }

    // Ejecutar cada segundo para asegurar que pille la carga dinámica
    setInterval(inicializarInteractivo, 1000);
})();
</script>

